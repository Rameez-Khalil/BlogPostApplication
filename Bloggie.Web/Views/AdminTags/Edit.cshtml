@model Bloggie.Web.Models.VIewModels.EditTagRequest
<div class="bg-secondary bg-opacity-10 py-2 w-100">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" id="id" asp-for="Id" readonly/>
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input class="form-control" type="text" id="displayName" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">

            <button class="btn btn-dark" type="submit">Update</button>
            <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="AdminTags" asp-action="Delete">Delete</button>
            </div>
        </div>
    </form>
</div>